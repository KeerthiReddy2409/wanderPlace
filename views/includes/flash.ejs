<div id="flash-container" class="position-fixed top-0 end-0 p-3" style="z-index: 1055;">
  <% if (success && success.length) { %>
    <div class="toast align-items-center text-bg-success border-0 show mb-2 shadow" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
          <i class="fas fa-check-circle me-2"></i> <%= success %>
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  <% } %>

  <% if (error && error.length) { %>
    <div class="toast align-items-center text-bg-danger border-0 show mb-2 shadow" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
          <i class="fas fa-exclamation-circle me-2"></i> <%= error %>
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  <% } %>
</div>

<script>
  // Auto-dismiss toasts after 4 seconds
  document.querySelectorAll('.toast').forEach(toastEl => {
    setTimeout(() => {
      const toast = bootstrap.Toast.getOrCreateInstance(toastEl);
      toast.hide();
    }, 4000);
  });
</script>
